class MinStack {
    stack<int> a; // main stack
    stack<int> b; // min stack
public:
    MinStack() { }
    
    void push(int val) {
        a.push(val);
        if(b.empty() || val < b.top())
            b.push(val);
        else
            b.push(b.top());
    }
    
    void pop() {
        a.pop();
        b.pop();
    }
    
    int top() {
        return a.top();
    }
    
    int getMin() {
        return b.top();
    }
};
