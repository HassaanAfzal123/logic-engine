class Solution {
public:
    bool searchMatrix(vector<vector<int>>& matrix, int target) {
        int low=0;
        int high=matrix.size()-1;

    while (low <= high) {
        int mid = low + (high - low) / 2;

            int first = matrix[mid][0];
            int last  = matrix[mid][matrix[mid].size() - 1];

        if (target>= first && target<= last)
            return func(matrix,target,mid);

        else if (target> last)
            low = mid + 1;

        else
            high = mid - 1;
    }

    return false;
                
    }

    bool func(vector<vector<int>>& matrix, int target, int middle){
        int low=0;
        int high=matrix[middle].size()-1;

     while (low <= high) {
        int mid = low + (high - low) / 2;

        if (matrix[middle][mid] == target)
            return true;

        else if (matrix[middle][mid] < target)
            low = mid + 1;

        else
            high = mid - 1;
    }

    return false;

    }


};
